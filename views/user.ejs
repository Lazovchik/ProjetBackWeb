<!DOCTYPE html>
<html lang="en">
	<head>
		<% include partials/head %> 
	</head>
 	<body class="container bg-1 d-flex justify-content-center">
		<div class="row text-center">
			<h1>Remember Your Money</h1>
		</div>
		<div class="modifBox" id="modifUserBox"></div>	
		<div class="row steps-row">
			<form>
				<div class="row">
					<div class="col-sm-3"></div>
					<div class="col-sm-4">
						 <div class="form-group">
							<label for="email">E-mail</label>
							<input type="email" class="form-control" id="email" 
							placeholder="your email">
						 </div>
					</div>
					<div class="col-sm-2 user-col">
						<input type="submit" class="btn log-btn" id="changeEmail" value="Change">
					</div>
				</div>
			</form>
		</div>
		<div class="row">
			<form>
				<div class="row">
					<div class="col-sm-3"></div>
					<div class="col-sm-4">
						 <div class="form-group">
							<label for="password">Password</label>
							<input type="text" class="form-control" id="password" 
							placeholder="your password">
						 </div>
					</div>
					<div class="col-sm-2 user-col">
						<input type="submit" class="btn log-btn" id="changePassword" value="Change">
					</div>
				</div>
				<div class="errorBox" id="errorUserBox"></div>	
			</form>
		</div>
		<div class="row pad-row">
			<div class="col-sm-6">
				<h1>Debts</h1>
				<br>
				<% include partials/debt%>
				<br>
				<button class="btn log-btn">
					Add Debt
				</button>
			</div>
			<div class="col-sm-6">
				<h1>Favors</h1>
				<br>
				<% include partials/favor%>
				<br>
				<button class="btn log-btn">
					Add Favor
				</button>
			</div>
		</div>
	</body>
	<script src="/javascripts/userPage.js"></script>
</html>
